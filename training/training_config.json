{
  "max_steps": 300,
  "total_batch_size": 8192,
  "seq_len": 1024,
  "sample_every": 50,
  "sampler": {
    "prompts": [
      {
        "prompt": "The quick brown fox",
        "max_tokens": 48,
        "temperature": 0.2,
        "top_k": 20
      },
      {
        "prompt": "In a surprising turn of events, the research team announced",
        "max_tokens": 96,
        "temperature": 0.6,
        "top_k": 40
      },
      {
        "prompt": "Once upon a time, in a town by the sea, there lived",
        "max_tokens": 128,
        "temperature": 0.8,
        "top_k": 80
      },
      {
        "prompt": "Subject: Weekly Project Update\n\nHi team,\nHere is a quick summary of progress this week:\n-",
        "max_tokens": 120,
        "temperature": 0.5,
        "top_k": 40
      },
      {
        "prompt": "def fibonacci(n):\n    if n <= 1:\n        return n\n    ",
        "max_tokens": 96,
        "temperature": 0.3,
        "top_k": 30
      },
      {
        "prompt": "User: I keep putting things off and then rushing at the last minute.\nAssistant:",
        "max_tokens": 96,
        "temperature": 0.7,
        "top_k": 60
      }
    ]
  },
  "save_every": 1000,
  "optimizer": {
    "lr": 0.0003,
    "weight_decay": 0.1,
    "betas": [0.9, 0.95],
    "eps": 1e-8
