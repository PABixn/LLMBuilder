  "lr_scheduler": {
    "type": "sequential",
    "schedulers": [
      {
        "type": "linear",
        "steps": 50,
        "start_factor": 0.1,
        "end_factor": 1.0
      },
      {
        "type": "cosine_annealing",
        "steps": 250,
        "eta_min": 1e-5
      }
    ]
  }
}
