{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "vite/client"
    ],
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "src/**/*.ts",
    "vite.config.ts"
  ]
}
