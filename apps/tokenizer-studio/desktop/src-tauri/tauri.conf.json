{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tokenizer Studio",
  "version": "0.1.0",
  "identifier": "com.tokenizerstudio.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Tokenizer Studio",
        "width": 1240,
        "height": 860,
        "minWidth": 980,
        "minHeight": 700,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/runtime/": "runtime/"
    },
    "targets": "all"
  }
}
